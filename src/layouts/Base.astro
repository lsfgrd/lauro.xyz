---
import BackToTop from "../components/BackToTop.astro";
import BaseHead from "../components/BaseHead.astro";
import type { Props as BaseHeadProps } from "../components/BaseHead.astro";

export interface Props {
  seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead {...seo} />
    <slot name="head-bottom" />
    <script src="https://kit.fontawesome.com/7cb38affa2.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <slot name="header" />
    <main>
      <slot />
    </main>
    <slot name="footer" />

    <BackToTop />
  </body>
</html>
